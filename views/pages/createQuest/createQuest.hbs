{{#extend "template"}}
    {{#content "head" mode="append"}}
        <link rel="stylesheet" href="{{CDN 'css/createQuest.css'}}">
    {{/content}}

    {{#content "body"}}
        <div class="container">
            {{#if isAuth}}
            <h2>Создание квеста</h2>
            <hr class="extra-margins">
            <form id="mainForm" method="POST">
            <div class="input-group">
                <label for="title">Название</label>
                <input name="title" type="text" id="title" class="input-group__input input_dark" required>
            </div>

            <div class="input-group">
                <label for="city">Город</label>
                <input name="city" type="text" id="city" class="input-group__input input_dark input-autocomplete" required>
            </div>

            <div class="input-group">
                <label for="tags">Теги</label>
                <div class="tags">
                    <input name="tags" type="text" id="tags" class="">
                </div>
            </div>

            <div class="input-group">
                <label for="description">Описание</label>
                <textarea name="description" id="description" class="input-group__textarea" required></textarea>
            </div>
            </form>
            <h5>Добавление этапов</h5>
            <button class="btn btn_primary add-quest__button">+</button>
            <ul class="tabs add-quest__tabs" role="tablist">

            </ul>

            <div class="tab-content quests-content">

            </div>

            <button role="createquest" class="btn btn_primary btn_disabled">Создать</button>
            {{else}}
            <h4 class="center">Для создания квеста необходимо авторизоваться</h4>
            {{/if}}
        </div>
    {{/content}}

    {{#content "scripts"}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/jquery.easy-autocomplete.min.js"></script>
        <script src="{{CDN 'js/createQuest.js'}}"></script>
    {{/content}}
{{/extend}}
